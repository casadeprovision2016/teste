# Production Environment Configuration
# Copy this to .env and update with your production values

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production
FLOWER_PASSWORD=your-secure-flower-password-change-this

# Database (SQLite for development, consider PostgreSQL for production)
DATABASE_URL=sqlite:////app/data/editais.db
# For PostgreSQL: postgresql://user:password@host:port/database

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# AI/ML Configuration
MODEL_NAME=llama3.2:3b
MODEL_MAX_TOKENS=4096
OLLAMA_HOST=http://ollama:11434

# Storage Paths
STORAGE_BASE_PATH=/app/storage/editais
PROCESSED_PATH=/app/storage/processados
TEMP_PATH=/app/storage/temp

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="Edital Processor"
VERSION=1.0.0
DESCRIPTION="AI-powered Brazilian government procurement document processor"

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]

# Performance
WORKERS=4
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Backup Configuration
BACKUP_DIR=/var/backups/edital-processor
RETENTION_DAYS=30

# SSL/TLS (for production with nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# External Services (optional)
WEBHOOK_SECRET=your-webhook-secret-for-callbacks
NOTIFICATION_EMAIL=admin@your-domain.com
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password