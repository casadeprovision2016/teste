# ==============================================
# SISTEMA DE PROCESSAMENTO DE EDITAIS - ENV CONFIG
# ==============================================

# Application Settings
APP_NAME="Sistema de Processamento de Editais"
APP_VERSION="1.0.0"
DEBUG=False
LOG_LEVEL=INFO
WORKERS=4

# API Configuration
API_V1_STR="/api/v1"
PROJECT_NAME="Edital Processor"
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:5173"]

# Security (MUDE ESTAS CHAVES EM PRODUÇÃO!)
SECRET_KEY=your-super-secret-key-min-32-characters-change-in-production
JWT_SECRET_KEY=jwt-secret-key-also-min-32-characters-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=sqlite:///./data/editais.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=10

# Storage Configuration
STORAGE_BASE_PATH=/app/storage/editais
PROCESSED_PATH=/app/storage/processados
TEMP_PATH=/app/storage/temp
MAX_FILE_SIZE=104857600

# AI Model Configuration
MODEL_NAME=llama3.2:3b
MODEL_MAX_TOKENS=4096
MODEL_TEMPERATURE=0.1
OLLAMA_HOST=http://ollama:11434

# Docling Configuration
DOCLING_OCR_ENABLED=True
DOCLING_OCR_LANGUAGES=["por","eng"]
DOCLING_TABLE_DETECTION=True
DOCLING_CACHE_ENABLED=True

# Processing Limits
DAILY_PROCESSING_LIMIT=50
MAX_CONCURRENT_TASKS=4
TASK_RETRY_LIMIT=3
TASK_RETRY_DELAY=60

# Monitoring & Metrics
ENABLE_METRICS=True
METRICS_PORT=9090
SENTRY_DSN=

# Email Configuration (Opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@editalprocessor.com

# Webhook Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_DELAY=5

# Flower Dashboard
FLOWER_PASSWORD=admin123

